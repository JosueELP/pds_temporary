<%= form_with(model: city, local: true) do |form| %>
  <% if city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
      <% city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :ciudad %>
    <%= form.text_field :city_name %>
  </div>

  <div>
    <div class="field">
      <p style="color:gray;">Estado</p>
    </div>
    <div class="dropdown">
      <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Seleccione un Estado</a>
      <div class="dropdown-menu">
        <% @states.each do |states| %>
          <div class="col">
            <%= form.radio_button :state_id, states.id %>
            <%= form.label :state_id, states.state_name, :value => states.id, :class=>"fieldTitle tableButton"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit"Guardar",class:"btn bigBtn" %>
  </div>
<% end %>

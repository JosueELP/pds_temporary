<%= render "partials/nav"%>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row text-center">
    <div class="col">
      <h1>Ciudades</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr class="tableTitle">
            <th>Ciudad&nbsp&nbsp&nbsp&nbsp&nbsp</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @cities.each do |city| %>
            <tr class="tableInfo">
              <td><%= city.city_name %>&nbsp&nbsp&nbsp&nbsp&nbsp</td>
              <td><%= link_to 'Ver', city, class:"tableButton" %>&nbsp&nbsp&nbsp&nbsp&nbsp</td>
              <td><%= link_to 'Editar', edit_city_path(city), class:"tableButton" %>&nbsp&nbsp&nbsp&nbsp&nbsp</td>
              <td><%= button_to 'Eliminar', city, class:"tableButton", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <br>

      <%= link_to 'Nueva Ciudad', new_city_path, class:"tableButtonNew" %>
    </div>
  </div>
</div>

<div class="small-container center-block">
  <h2 class="title">Olvidaste tu contraseña?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "Correo electrónico" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Mandarme instrucciones de reinicio de contraseña", class:"btn btn-primary margin-top" %>
    </div>
  <% end %>

  <%= render "devise/shared/links"%>
</div>

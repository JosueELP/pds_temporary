<div class="small-container center-block">

  <div class="container text-center">
    <div class="row">
      <div class="col-12">
        <%=image_tag("pdsLogo.png",size:"180x180")%>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <h1 class="title text-center"> PACKAGE DELIVERY SYSTEM </h1>
      </div>

    </div>
  </div>
  <h2 class="title">Iniciar sesión</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "Correo electrónico", :class=>"fieldTitle" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "Contraseña" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recordar sesión" %>
      </div>
    <% end %>

    <div class="actions" style="margin-bottom: 10px;">
      <%= f.submit "Iniciar sesión", class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>

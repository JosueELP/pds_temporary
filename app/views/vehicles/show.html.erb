<%= render "partials/nav"%>
<div class="container">
  <div class="row text-center">
    <div class="col">
        <h1>Consulta</h1>
    </div>
  </div>

  <p id="notice"><%= notice %></p>

  <p class="tableInfo">
    <strong class="tableTitle">Marca:</strong>
    <%= @vehicle.brand %>
  </p>

  <p class="tableInfo">
    <strong class="tableTitle">Año:</strong>
    <%= @vehicle.year %>
  </p>

  <p class="tableInfo">
    <strong class="tableTitle">Modelo:</strong>
    <%= @vehicle.model %>
  </p>

  <p class="tableInfo">
    <strong class="tableTitle">Color:</strong>
    <%= @vehicle.color %>
  </p>

  <p class="tableInfo">
    <strong class="tableTitle">Placa:</strong>
    <%= @vehicle.license_plate %>
  </p>

  <%= link_to 'Editar', edit_vehicle_path(@vehicle), class:"tableButton" %> |
  <%= link_to 'Atrás', vehicles_path, class:"tableButton" %>

</div>

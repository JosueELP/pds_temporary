<%= form_with(model: status, local: true) do |form| %>
  <% if status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(status.errors.count, "error") %> prohibited this status from being saved:</h2>

      <ul>
      <% status.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>

  <div class="field">
    <%= form.label :fecha_de_status %>
    <div class="selectors">
      <%= form.date_select :status_date %>
    </div>
  </div>

  <div>
    <div class="field">
      <p style="color:gray;">Sucursal</p>
    </div>
    <div class="dropdown">
      <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Seleccione una Sucursal</a>
      <div class="dropdown-menu">
        <% @branch_office.each do |branch_office| %>
          <div class="col">
            <%= form.radio_button :branch_office_id, branch_office.id %>
            <%= form.label :branch_office_id, branch_office.branch_office_name, :value => branch_office.id, :class=>"fieldTitle tableButton"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit"Guardar",class:"btn bigBtn" %>
  </div>
<% end %>

<%= render "partials/nav"%>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row text-center">
    <div class="col">
      <h1>Recolecciones</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr class="tableTitle">
            <th>Terminado&nbsp&nbsp&nbsp&nbsp&nbsp</th>
            <th>Agenda</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pick_ups.each do |pick_up| %>
            <tr class="tableInfo">
              <td><%= pick_up.is_done %></td>
              <td><%= pick_up.schedule %>&nbsp&nbsp&nbsp&nbsp&nbsp</td>
              <td><%= link_to 'Ver', pick_up, class:"tableButton" %>&nbsp&nbsp&nbsp&nbsp&nbsp</td>
              <td><%= link_to 'Editar', edit_pick_up_path(pick_up), class:"tableButton" %>&nbsp&nbsp&nbsp&nbsp&nbsp</td>
              <td><%= button_to 'Eliminar', pick_up, class:"tableButton", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to 'Nueva RecolecciÃ³n', new_pick_up_path, class:"tableButtonNew" %>
    </div>
  </div>
</div>

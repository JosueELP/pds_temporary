<p id="notice"><%= notice %></p>

<h1>Branch Offices</h1>

<table>
  <thead>
    <tr>
      <th>Branch office name</th>
      <th>Branch office phone</th>
      <th>Branch office email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @branch_offices.each do |branch_office| %>
      <tr>
        <td><%= branch_office.branch_office_name %></td>
        <td><%= branch_office.branch_office_phone %></td>
        <td><%= branch_office.branch_office_email %></td>
        <td><%= link_to 'Show', branch_office %></td>
        <td><%= link_to 'Edit', edit_branch_office_path(branch_office) %></td>
        <td><%= link_to 'Destroy', branch_office, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


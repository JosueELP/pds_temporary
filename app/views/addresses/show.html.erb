<%= render "partials/nav"%>
<div class="container">
  <div class="row text-center">
    <div class="col">
      <h1>Consulta de Dirección</h1>
    </div>
  </div>
  <p id="notice"><%= notice %></p>

  <p class="tableInfo">
    <strong class="tableTitle">Calle:</strong>
    <%= @address.street %>
  </p>

  <p class="tableInfo">
    <strong class="tableTitle">Número:</strong>
    <%= @address.number %>
  </p>

  <p class="tableInfo">
    <strong class="tableTitle">Colonia:</strong>
    <%= @address.colony %>
  </p>

  <p class="tableInfo">
    <strong class="tableTitle">Número Interior:</strong>
    <%= @address.interior_number %>
  </p>

  <p class="tableInfo">
    <strong class="tableTitle">Código Postal:</strong>
    <%= @address.postal_code %>
  </p>

  <p class="tableInfo">
    <strong class="tableTitle">Ciudad:</strong>
    <%= @cities.city_name %>
  </p>

  <p class="tableInfo">
    <strong class="tableTitle">Estado:</strong>
    <%= @cities.state.state_name %>
  </p>

  <%= link_to 'Editar', edit_address_path(@address), class:"tableButton" %> |
  <%= link_to 'Atrás', addresses_path, class:"tableButton" %>

</div>
